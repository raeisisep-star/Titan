# TITAN Trading System - Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=production
CORS_ORIGIN=*

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5433/database_name
DB_HOST=localhost
DB_PORT=5433
DB_USER=username
DB_PASSWORD=__SET_SECURE_PASSWORD_HERE__
DB_NAME=database_name

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration (MUST be at least 32 characters)
JWT_SECRET=this_is_a_test_secret_with_at_least_32_chars_minimum

# Rate Limiting Configuration
RATE_LIMIT_BACKEND=memory  # Options: memory | redis
RATE_LIMIT_DEFAULT_POINTS=60  # Max requests
RATE_LIMIT_DEFAULT_DURATION=60  # Time window in seconds
RATE_LIMIT_DEFAULT_BLOCK_MS=0  # Block duration (0 = no block)
RATE_LIMIT_BURST_POINTS=10  # Burst limit
RATE_LIMIT_BURST_DURATION=5  # Burst window in seconds

# Exchange Configuration
# WARNING: Only use 'paper' in production until proper security measures are in place
EXCHANGE_NAME=paper  # Options: paper | mexc

# MEXC Exchange Credentials (TESTNET ONLY - DO NOT USE PRODUCTION KEYS)
# These should ONLY be set in secure environment (not in this file)
# Use server environment variables or secret management service
MEXC_API_KEY=__SET_IN_SECURE_ENV__
MEXC_API_SECRET=__SET_IN_SECURE_ENV__
MEXC_BASE_URL=https://api.mexc.com

# Logging
LOG_LEVEL=info  # Options: debug | info | warn | error
DEBUG_RATE_LIMIT=false
DEBUG_IDEMPOTENCY=false

# Logs Configuration (Phase 3.4)
LOGS_DEMO=false  # true for staging/dev, false for production

# Internal APIs Configuration (Phase 3.5)
INTERNAL_APIS_DEMO=false  # true for staging/dev (returns mock data), false for production
