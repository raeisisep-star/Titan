# TITAN Trading System - Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL="postgresql://username:password@localhost:5432/titan_trading"
REDIS_URL="redis://localhost:6379"

# =============================================================================
# JWT & SECURITY
# =============================================================================
JWT_SECRET="your-super-secret-jwt-key-here"
SESSION_SECRET="your-session-secret-here"

# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================
# Create a bot: https://t.me/BotFather
# 1. Send /start to @BotFather
# 2. Send /newbot
# 3. Follow instructions to create bot
# 4. Copy the token below
TELEGRAM_BOT_TOKEN="123456789:ABCdefGHIjklMNOpqrSTUvwxyz"

# Your personal chat ID or channel ID
# To get your chat ID:
# 1. Send a message to your bot
# 2. Visit: https://api.telegram.org/bot<YOUR_BOT_TOKEN>/getUpdates
# 3. Look for "chat":{"id": YOUR_CHAT_ID}
TELEGRAM_CHAT_ID="123456789"

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Choose one of the following email services:

# Option 1: Resend (Recommended)
EMAIL_API_URL="https://api.resend.com/emails"
EMAIL_API_KEY="re_xxxxxxxx"
EMAIL_FROM="alerts@yourdomain.com"

# Option 2: SendGrid
# EMAIL_API_URL="https://api.sendgrid.com/v3/mail/send"
# EMAIL_API_KEY="SG.xxxxxxxx"
# EMAIL_FROM="alerts@yourdomain.com"

# Option 3: Traditional SMTP
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"
# EMAIL_FROM="your-email@gmail.com"

# =============================================================================
# SMS CONFIGURATION (Iranian Service)
# =============================================================================
# Kavenegar SMS service for Iran
# Sign up at: https://kavenegar.com
KAVENEGAR_API_KEY="your-kavenegar-api-key"
SMS_SENDER="10008663"

# =============================================================================
# EXTERNAL APIs
# =============================================================================
# MEXC Exchange API (for real market data)
MEXC_API_KEY="your-mexc-api-key"
MEXC_SECRET_KEY="your-mexc-secret-key"

# Gemini AI API (for AI features)
GEMINI_API_KEY="your-gemini-api-key"

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_LIVE_TRADING="false"
ENABLE_AI_PREDICTIONS="true"
ENABLE_NOTIFICATIONS="true"
ENABLE_TELEGRAM="true"
ENABLE_EMAIL="true"
ENABLE_SMS="false"

# =============================================================================
# CLOUDFLARE WORKERS SPECIFIC
# =============================================================================
# These will be set as secrets in Cloudflare Workers
# Use: wrangler secret put TELEGRAM_BOT_TOKEN
# Don't put actual values here for production!