# TITAN Trading System - Environment Variables Template
# Copy this file to .env for development and configure your keys

# === DEVELOPMENT ENVIRONMENT ===
NODE_ENV=development
DEBUG_MODE=true
PORT=3000

# === API KEYS - EXTERNAL SERVICES ===
# OpenAI API (for ChatGPT integration)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000

# Anthropic API (for Claude integration)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=2000

# Google AI API (for Gemini integration)
GOOGLE_API_KEY=your-google-ai-key-here
GOOGLE_MODEL=gemini-1.5-pro-latest

# === EXCHANGE APIs ===
# Binance Exchange
BINANCE_API_KEY=your-binance-api-key-here
BINANCE_SECRET_KEY=your-binance-secret-key-here
BINANCE_TESTNET=true

# Coinbase Pro Exchange
COINBASE_API_KEY=your-coinbase-api-key-here
COINBASE_SECRET=your-coinbase-secret-here
COINBASE_PASSPHRASE=your-coinbase-passphrase-here
COINBASE_SANDBOX=true

# KuCoin Exchange
KUCOIN_API_KEY=your-kucoin-api-key-here
KUCOIN_SECRET_KEY=your-kucoin-secret-key-here
KUCOIN_PASSPHRASE=your-kucoin-passphrase-here
KUCOIN_SANDBOX=true

# === NOTIFICATION SERVICES ===
# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password-here
FROM_EMAIL=noreply@titan-trading.com
FROM_NAME=TITAN Trading System

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_CHAT_ID=your-telegram-chat-id-here

# SMS Service (Kavenegar - Iranian SMS Service)
KAVENEGAR_API_KEY=your-kavenegar-api-key-here
KAVENEGAR_SENDER=your-sender-number-here

# Discord Webhook
DISCORD_WEBHOOK_URL=your-discord-webhook-url-here

# === SECURITY SETTINGS ===
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=24h
SESSION_SECRET=your-session-secret-key-here
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# === CLOUDFLARE SETTINGS ===
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token-here
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id-here

# === DATABASE SETTINGS ===
# D1 Database (will be configured in wrangler.jsonc)
DATABASE_ID=your-d1-database-id-here

# KV Storage (will be configured in wrangler.jsonc)
KV_NAMESPACE_ID=your-kv-namespace-id-here

# === MARKET DATA PROVIDERS ===
# CoinGecko API
COINGECKO_API_KEY=your-coingecko-api-key-here

# CoinMarketCap API
COINMARKETCAP_API_KEY=your-coinmarketcap-api-key-here

# Alpha Vantage (for traditional markets)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key-here

# === MONITORING & ANALYTICS ===
# Sentry for error tracking
SENTRY_DSN=your-sentry-dsn-here

# Google Analytics
GA_TRACKING_ID=your-google-analytics-id-here

# === BACKUP SETTINGS ===
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key-here
BACKUP_SCHEDULE_HOURS=24

# === FEATURE FLAGS ===
ENABLE_LIVE_TRADING=false
ENABLE_AI_PREDICTIONS=true
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_BACKUP_AUTOMATION=true

# === CUSTOM SETTINGS ===
# Trading Settings
MAX_CONCURRENT_TRADES=50
DEFAULT_RISK_PERCENTAGE=2
EMERGENCY_STOP_LOSS=10

# AI Settings
AI_CONFIDENCE_THRESHOLD=0.75
AI_FALLBACK_PROVIDER=openai
AI_RATE_LIMIT=60

# System Settings
SYSTEM_MAINTENANCE_MODE=false
SYSTEM_HEALTH_CHECK_INTERVAL=30