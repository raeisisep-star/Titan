{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "titan-trading",
  "compatibility_date": "2024-01-01",
  "compatibility_flags": ["nodejs_compat"],
  "pages_build_output_dir": "./dist",

  // D1 Database for production data storage
  "d1_databases": [
    {
      "binding": "DB",
      "database_name": "titan-production",
      "database_id": "placeholder-will-be-updated-after-creation"
    }
  ],

  // KV Storage for caching and real-time data
  "kv_namespaces": [
    {
      "binding": "KV",
      "id": "cb433725a91f4087a730ff37d13077df",
      "preview_id": "161760e6513c446d992bf61c5bd32276"
    }
  ],

  // Environment variables for production
  "vars": {
    "ENVIRONMENT": "production",
    "DEBUG_MODE": "false"
  }
}