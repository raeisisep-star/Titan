{
  "name": "titan-trading-system",
  "version": "3.0.0",
  "description": "سیستم معاملات خودکار تایتان با هوش مصنوعی آرتمیس - Enhanced Production Edition",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --ip 0.0.0.0 --port 3000",
    "dev:d1": "wrangler pages dev dist --d1=webapp-production --local --ip 0.0.0.0 --port 3000",
    "dev:enhanced": "wrangler dev src/enhanced-server.ts --config wrangler.enhanced.jsonc --port 8787",
    "build": "vite build",
    "build:enhanced": "tsc src/enhanced-server.ts --outDir dist --target es2022 --module esnext --moduleResolution node",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist",
    "deploy:prod": "npm run build && wrangler pages deploy dist --project-name webapp",
    "deploy:enhanced": "npm run build:enhanced && wrangler deploy --config wrangler.enhanced.jsonc",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "jest --runInBand --passWithNoTests",
    "test:ci": "jest --ci --coverage --maxWorkers=2 --passWithNoTests",
    "test:watch": "jest --watch",
    "test:contracts": "jest tests/contracts --coverage",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.ts,.tsx --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "db:migrate:local": "wrangler d1 migrations apply webapp-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply webapp-production",
    "db:seed": "wrangler d1 execute webapp-production --local --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed",
    "db:console:local": "wrangler d1 execute webapp-production --local",
    "db:console:prod": "wrangler d1 execute webapp-production",
    "git:init": "git init && git add . && git commit -m 'Initial Titan Trading System'",
    "git:commit": "git add . && git commit -m",
    "git:status": "git status",
    "git:log": "git log --oneline",
    "test:enhanced": "curl http://localhost:8787/api/health/enhanced",
    "monitor:start": "npm run dev:enhanced",
    "monitor:dashboard": "open http://localhost:8787/dashboard/unified-monitoring-dashboard.html",
    "security:audit": "curl -X POST http://localhost:8787/api/enhanced/security/audit -H 'Authorization: Bearer demo_token_123'",
    "ai:optimize": "curl -X POST http://localhost:8787/api/enhanced/ai/optimize -H 'Authorization: Bearer demo_token_123' -H 'Content-Type: application/json' -d '{\"modelId\":\"main_predictor\"}'",
    "performance:metrics": "curl http://localhost:8787/api/enhanced/performance/metrics -H 'Authorization: Bearer demo_token_123'",
    "prepare": "husky"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.9.0",
    "@hono/node-server": "^1.19.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.15.5",
    "@types/redis": "^4.0.10",
    "@types/uuid": "^10.0.0",
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.3",
    "express-rate-limit": "^8.2.1",
    "express-slow-down": "^3.0.0",
    "helmet": "^8.1.0",
    "hono": "^4.0.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "openai": "^4.20.0",
    "pg": "^8.16.3",
    "rate-limit-redis": "^4.2.3",
    "rate-limiter-flexible": "^8.1.0",
    "redis": "^5.8.2",
    "uuid": "^13.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "4.20250705.0",
    "@hono/vite-cloudflare-pages": "^0.4.2",
    "@playwright/test": "^1.56.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.39.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.6",
    "nock": "^14.0.10",
    "prettier": "^3.6.2",
    "puppeteer": "^24.19.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "wrangler": "^4.45.3",
    "yaml": "^2.8.1"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
